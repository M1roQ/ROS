<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Первая черепаха -->
  <node pkg="turtlesim" exec="turtlesim_node" name="sim1" namespace="turtlesim1" />

  <!-- Вторая черепаха -->
  <node pkg="turtlesim" exec="turtlesim_node" name="sim2" namespace="turtlesim2" />

  <!-- Третья черепаха -->
  <node pkg="turtlesim" exec="turtlesim_node" name="sim3" namespace="turtlesim3" />

  <!-- mimic для второй черепахи (следует за первой) -->
  <node pkg="turtlesim" exec="mimic" name="mimic2" output="screen">
    <remap from="/input/pose" to="/turtlesim1/turtle1/pose" />
    <remap from="/output/cmd_vel" to="/turtlesim2/turtle1/cmd_vel" />
  </node>

  <!-- mimic для третьей черепахи (следует за второй) -->
  <node pkg="turtlesim" exec="mimic" name="mimic3" output="screen">
    <remap from="/input/pose" to="/turtlesim2/turtle1/pose" />
    <remap from="/output/cmd_vel" to="/turtlesim3/turtle1/cmd_vel" />
  </node>
</launch>
